<Page x:Class="TaskGiver.ResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Результаты">
    <Grid Background="White">
        <Border Background="#F8F8F8" 
                CornerRadius="10" 
                Padding="40" 
                Width="500"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Результаты викторины" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2E8B57"
                           Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock x:Name="StudentInfoText" 
                               Text="Имя Фамилия, Группа" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="{Binding CompletionTime}" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>

                <!-- Результаты -->
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="25"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,15">
                            <TextBlock Text="Правильных ответов: " 
                                       FontSize="18"/>
                            <TextBlock x:Name="CorrectAnswersText" 
                                       Text="0" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="Green"/>
                            <TextBlock Text=" из " 
                                       FontSize="18"/>
                            <TextBlock x:Name="TotalQuestionsText" 
                                       Text="0" 
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Процент правильных: " 
                                       FontSize="20"/>
                            <TextBlock x:Name="PercentageText" 
                                       Text="0%" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#2E8B57"/>
                        </StackPanel>

                        <!-- Индикатор прогресса -->
                        <Border Background="#E0E0E0" 
                                Height="25" 
                                CornerRadius="12.5"
                                Margin="0,20,0,0">
                            <Border x:Name="ProgressIndicator" 
                                    Background="#2E8B57" 
                                    Height="25" 
                                    CornerRadius="12.5"
                                    HorizontalAlignment="Left"
                                    Width="0"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Сообщение -->
                <TextBlock x:Name="ResultMessageText" 
                           Text="" 
                           FontSize="16" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Вернуться в меню" 
                            Click="MenuButton_Click" 
                            Width="180" 
                            Height="40"
                            FontSize="16"
                            Background="#4682B4"
                            Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>