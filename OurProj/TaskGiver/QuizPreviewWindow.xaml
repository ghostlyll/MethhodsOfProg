<Window x:Class="TaskGiver.QuizPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предпросмотр викторины" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#4682B4" 
                Padding="15">
            <StackPanel>
                <TextBlock Text="Предпросмотр викторины" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="QuizInfoText" 
                           Text="" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Список вопросов -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="10">
            <ItemsControl x:Name="QuestionsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                                BorderThickness="0,0,0,1" 
                                Padding="10,15"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Вопрос " 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Number}" 
                                               FontWeight="Bold"
                                               Foreground="#4682B4"/>
                                    <TextBlock Text=":" 
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <TextBlock Text="{Binding Question}" 
                                           TextWrapping="Wrap" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <StackPanel Margin="20,0,0,0">
                                    <TextBlock Text="Правильный ответ:" 
                                               FontWeight="Bold"
                                               Foreground="Green"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding CorrectAnswer}" 
                                               FontWeight="Bold"
                                               Background="#F0FFF0"
                                               Padding="5"/>

                                    <TextBlock Text="Неправильные ответы:" 
                                               FontWeight="Bold"
                                               Foreground="Red"
                                               Margin="0,10,0,5"/>
                                    <ItemsControl ItemsSource="{Binding WrongAnswers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           Background="#FFF0F0"
                                                           Padding="5"
                                                           Margin="0,0,0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="#F0F0F0" 
                Padding="10" 
                BorderBrush="#C0C0C0" 
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Закрыть" 
                        Click="CloseButton_Click" 
                        Width="100" 
                        Height="35"
                        Background="#4682B4"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>